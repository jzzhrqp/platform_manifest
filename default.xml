<?xml version="1.0" encoding="UTF-8"?>
<manifest>
  <remote name="arpi" fetch="git://github.com/android-rpi"/>

  <remote name="tab-pi" fetch="git://github.com/tab-pi"/>

  <remote name="private"
           fetch="ssh://git@github.com" />

  <remote name="aosp"
          fetch="git://mirrors.ustc.edu.cn/aosp"
          review="android-review.googlesource.com" />

  <default revision="refs/tags/android-7.1.2_r17"
           remote="aosp"
           sync-j="4"
           sync-c="true" />

  # Our device tree and repos
  <project path="kernel/rpi" name="kernel_rpi" revision="nougat" remote="tab-pi"/>
  <project path="hardware/rpi" name="hardware_rpi" revision="nougat" remote="arpi"/>
  <project path="device/brcm/rpi3" name="device_brcm_rpi3" revision="nougat" remote="tab-pi"/>
  <project path="external/mesa3d" name="external_mesa3d" revision="nougat" remote="arpi"/>
  <project path="external/drm_gralloc" name="external_drm_gralloc" revision="nougat" remote="arpi"/>
  <project path="vendor/tab-pi" name="vendor_tab-pi" revision="nougat" remote="tab-pi"/>
  <project path="frameworks/native" name="frameworks_native" revision="nougat" remote="tab-pi" groups="pdk" />
  <project path="frameworks/base" name="frameworks_base" revision="nougat" remote="tab-pi" groups="pdk-cw-fs,pdk-fs" />
  <project path="hardware/broadcom/libbt" name="hardware_broadcom_libbt" revision="nougat" remote="tab-pi" groups="pdk" />


</manifest>
